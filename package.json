{
  "name": "clean-ts-api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Aguiar <devaguiar14@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watchAll -c jest-unit.config.js",
    "test:integration": "npm test -- --watchAll -c jest-integration.config.js",
    "test:staged": "npm test --findRelatedTests --bail",
    "test:ci": "npm test -- --coverage",
    "prepare": "npx husky install",
    "create-hook": "husky add .husky/pre-commit \"npm test:staged\""
  },
  "dependencies": {
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@types/validator": "^13.7.15",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^4.10.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
